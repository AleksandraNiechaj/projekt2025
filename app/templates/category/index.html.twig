{# templates/category/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Książka przepisów{% endblock %}

{% block body %}
    <div class="container py-5">

        {# Nagłówek #}
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold">KSIĄŻKA PRZEPISÓW</h1>
            <p class="lead text-muted">Wybierz kategorię, aby zobaczyć przepisy</p>
        </div>

        {# Karty kategorii #}
        {% if categories|length %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {% for category in categories %}
                    <div class="col">
                        <a href="{{ path('app_category_show', {id: category.id}) }}"
                           class="card h-100 text-decoration-none text-dark shadow-sm hover-shadow">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <h5 class="card-title mb-0 text-center">{{ category.name }}</h5>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center">
                Brak dostępnych kategorii.
            </div>
        {% endif %}

        {# Paginowana lista przepisów #}
        <div class="mt-5">
            <h2 class="mb-3">Najnowsze przepisy</h2>

            {% if pagination|length %}
                <ul class="list-group">
                    {% for recipe in pagination %}
                        <li class="list-group-item">
                            <a href="{{ path('app_recipe_show', {id: recipe.id}) }}">
                                {{ recipe.title }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>

                <nav class="mt-3 d-flex justify-content-center">
                    {{ knp_pagination_render(pagination) }}
                </nav>
            {% else %}
                <div class="alert alert-info">
                    Brak przepisów do wyświetlenia.
                </div>
            {% endif %}
        </div>

    </div>

    {# Drobny efekt hover #}
    <style>
        .hover-shadow:hover {
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15), 0 0 0.5rem rgba(0,0,0,0.05) !important;
            transform: translateY(-3px);
            transition: all 0.2s ease-in-out;
        }
    </style>
{% endblock %}
