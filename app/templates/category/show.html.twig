{% extends 'base.html.twig' %}

{% block title %}Kategoria: {{ category.name }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4">Kategoria: {{ category.name }}</h1>

        {% if recipes is not empty %}
            <ul class="list-group">
                {% for recipe in recipes %}
                    <li class="list-group-item">
                        <a href="{{ path('app_recipe_show', {id: recipe.id}) }}">
                            {{ recipe.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="alert alert-info">
                Brak przepisów w tej kategorii.
            </div>
        {% endif %}

        <p class="mt-3">
            <a href="{{ path('app_category_index') }}" class="btn btn-secondary">
                ← Powrót do kategorii
            </a>
        </p>
    </div>
{% endblock %}
